{
  "manifest_version": 3,
  "name": "TabMover",
  "version": "1.0",
  "description": "Move tabs between windows with keyboard shortcuts",
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "options_page": "options.html",
  "commands": {
    "move-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+M",
        "mac": "Command+Shift+M"
      },
      "description": "Show window selector to move current tab"
    },
    "move-to-last": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Move current tab to last used window"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["overlay.css"]
    }
  ]
}